<Page x:Class="MetodSimplex.Visual.Window4"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MetodSimplex.Visual"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Решение">

    <Grid>
        <ScrollViewer Width="Auto">
            <WrapPanel>

                <WrapPanel Orientation="Vertical">

                    <WrapPanel x:Name="matrixPanel" Orientation="Vertical">
                        <Grid x:Name="matr"/>
                    </WrapPanel>
                    <Label Content=" "/>
                    <Button x:Name="nextStep" Content=" Следующий шаг " Click="NextStep_Click"/>
                </WrapPanel>
                <WrapPanel Orientation="Vertical" Margin="5,0">
                    <WrapPanel Orientation="Horizontal"/>
                    <WrapPanel Orientation="Horizontal"/>
                </WrapPanel>
            </WrapPanel>
        </ScrollViewer>
    </Grid>
</Page>
